{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "paths": {
      "@lib": ["./src/lib/index.ts"]
    },
    "removeComments": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-to-md"
  },
  "include": ["src/", "template", "global.d.ts", "docs/src"]
}
