{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "paths": {
      "@lib": ["./src/lib/index.ts"]
    },
    "removeComments": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-to-md"
  },
  "include": [
    "src/",
    "global.d.ts",
    "docs/src",
    "node_modules/vitest/globals.d.ts"
  ],
  "exclude": ["docs/src/i18nrc.ts"]
}
