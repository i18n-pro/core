{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "paths": {
      "@lib/*": ["./src/lib/*"]
    },
    "removeComments": true,
    "outDir": "dist",
    "resolveJsonModule": false,
    "declaration": true,
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["src/", "template", "global.d.ts", "docs", "docs/.tsx"]
}
